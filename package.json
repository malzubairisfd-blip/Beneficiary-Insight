{
  "name": "beneficiary-insights-desktop",
  "version": "0.1.0",
  "description": "Beneficiary Insights - Offline Desktop",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "wait-on http://localhost:5173 && ts-node-esm electron/main.ts",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build": "npm run build:renderer && npm run build:electron",
    "dist": "npm run build && electron-builder --win portable --x64",
    "start": "electron ."
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "exceljs": "^4.3.0",
    "fuse.js": "^6.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xlsx": "^0.18.5",
    "axios": "^1.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^8.2.0",
    "electron": "^26.1.0",
    "electron-builder": "^24.6.0",
    "ts-node-esm": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.0",
    "wait-on": "^7.0.1",
    "esbuild": "^0.18.18"
  },
  "build": {
    "appId": "com.example.beneficiaryinsights",
    "asar": true,
    "asarUnpack": [
      "dist-electron/worker/**"
    ],
    "files": [
      "dist-electron/**/*",
      "dist-renderer/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "portable"
      ],
      "artifactName": "BeneficiaryInsights-${version}-win-${arch}.exe"
    },
    "portable": {
      "requestExecutionLevel": "user"
    }
  }
}
